<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <com.android.lixiang.base.utils.view.BounceScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_below="@+id/mApprovalInfomationToolbar"
            android:background="#ECECEC">

            <RelativeLayout
                android:id="@+id/bsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ECECEC">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/mInfoAreaRL"
                        android:layout_width="match_parent"
                        android:layout_height="317dp"
                        android:background="#FFFFFF">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="审批材料编号"
                                    android:layout_centerVertical="true"
                                    android:textColor="#4A4A4A"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="13dp"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="经办单位"
                                    android:layout_centerVertical="true"
                                    android:textColor="#4A4A4A"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="13dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="审批日期"
                                    android:layout_centerVertical="true"
                                    android:textColor="#4A4A4A"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="13dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="缺失材料"
                                    android:layout_centerVertical="true"
                                    android:textColor="#4A4A4A"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="13dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="关联信息ID"
                                    android:layout_centerVertical="true"
                                    android:textColor="#4A4A4A"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="13dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                >
                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="违章建筑轮廓"
                                    android:layout_centerVertical="true"
                                    android:textColor="#4A4A4A"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="13dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_above="@+id/mRL"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:background="#ECECEC"
                        android:layout_below="@+id/mInfoAreaRL"
                        android:id="@+id/mView1"/>

                    <RelativeLayout
                        android:layout_below="@+id/mInfoAreaRL"
                        android:layout_marginTop="14dp"
                        android:id="@+id/mRL"
                        android:layout_width="match_parent"
                        android:layout_height="266dp"
                        android:background="#FFFFFF">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="21dp"
                            android:text="备注"
                            android:textColor="#5C5C5C"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="52dp"
                            android:layout_marginRight="45dp"
                            android:background="#D9D9D9" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginRight="45dp"
                            android:background="#F0F0F0">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/mPlantLocationET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#F0F0F0"
                                android:imeOptions="actionDone"
                                android:gravity="left|top"
                                android:hint="请填写具体位置。例如XX街道，XX号"
                                android:inputType="textMultiLine"
                                android:maxLength="800"
                                android:minLines="7"
                                android:padding="12dp"
                                android:paddingLeft="11dp"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textColor="#686868"
                                android:textSize="12dp" />
                        </RelativeLayout>


                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </com.android.lixiang.base.utils.view.BounceScrollView>

        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            android:background="#FFFFFF"
            android:elevation="2dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/mApprovalInfomationToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/fake_status_bar"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextAppearance="@style/Toolbar.TitleText.Gray" />

        <RelativeLayout
            android:id="@+id/mLocationConfirmRL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#C5C5C5"
            android:clickable="true"
            android:focusable="true">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/confirm"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>