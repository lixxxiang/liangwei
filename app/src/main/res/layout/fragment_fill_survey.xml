<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <com.android.lixiang.base.utils.view.Gradient2Layout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mFillSurveyToolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="119dp">

                <RelativeLayout
                    android:id="@+id/mLineRL"
                    android:layout_width="match_parent"
                    android:layout_height="21dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="128dp"
                        android:background="#FFFFFF" />

                    <View
                        android:id="@+id/mPointBig"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/round_view_white" />

                    <RelativeLayout
                        android:id="@+id/space"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="83dp"
                        android:layout_toLeftOf="@+id/mPointBig">

                    </RelativeLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="103dp"
                        android:layout_toLeftOf="@+id/mPointBig"
                        android:background="@drawable/round_view_white" />
                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:text="填写勘察信息"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/point"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="144dp"
                android:layout_marginRight="94dp"
                android:layout_toLeftOf="@+id/point"
                android:text="照片参考"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mStrangeCard"
            android:layout_below="@+id/mFillSurveyToolbar"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="215dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/round_relativelayout"
            android:elevation="4dp">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mAcceptInsuranceTitleTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查勘信息"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/mLine1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E9E9E9"
                android:layout_below="@+id/mAcceptInsuranceTitleTV2"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_above="@+id/mPhotoAreaRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/mLine1">
                <RelativeLayout
                    android:id="@+id/mAcceptDisasterKindRL"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/appCompatImageView5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#ababab"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/disaster_kind"
                        android:visibility="invisible"
                        />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView5"
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/ic_foward" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView4"
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/ic_foward" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/acceptdisasterkind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="受灾类型"
                        android:textColor="#5C5C5C"
                        android:layout_marginLeft="23dp"
                        android:textSize="12dp"
                        android:layout_centerVertical="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#E9E9E9"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mAcceptDisasterSpeciesRL"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/appCompatImageView3"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#ababab"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/disaster_species"
                        android:visibility="invisible"
                        />
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView3"
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/ic_foward" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:text="受灾作物"
                        android:textColor="#5C5C5C"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#E9E9E9"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mAcceptInsuranceIdInfoRL"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="受灾面积"
                        android:textColor="#5C5C5C"
                        android:layout_marginLeft="23dp"
                        android:textSize="12dp"
                        android:layout_centerVertical="true" />
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:background="@drawable/ic_foward"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#E9E9E9"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mAcceptInsuranceAddressRl"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:text="受灾程度"
                        android:textColor="#5C5C5C"
                        android:textSize="12dp" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/appCompatImageView7"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#ababab"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/mDisaster_degreeTV"
                        android:visibility="invisible"
                        />
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView7"
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:background="@drawable/ic_foward"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="#E9E9E9"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mAcceptDisasterTimeRL"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:text="受灾时间"
                        android:textColor="#5C5C5C"
                        android:textSize="12dp" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/appCompatImageView6"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#ababab"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/mDisaster_timeTV"
                        android:visibility="invisible"
                        />
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView6"
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:background="@drawable/ic_foward"
                        android:layout_marginRight="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </LinearLayout>
            

        </RelativeLayout>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_border_white"
            android:layout_marginBottom="25dp">

        </android.support.v7.widget.AppCompatButton>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="23dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/mStatusBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            android:background="#00000000"
            android:elevation="2dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/mFillSurveyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_below="@+id/mStatusBar"
            android:background="#00000000"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>