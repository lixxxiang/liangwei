<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="23dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#5C5C5C"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="54dp"
                android:text="业主姓名"
                android:textColor="#5C5C5C"
                android:textSize="10dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="74dp"
                android:text="@string/credit_id"
                android:textColor="#5C5C5C"
                android:textSize="10dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="94dp"
                android:text="电话号码"
                android:textColor="#5C5C5C"
                android:textSize="10dp" />


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="54dp"
                android:layout_marginRight="23dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/mNameTV"
                android:textColor="#ABABAB"
                android:textSize="10dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="74dp"
                android:layout_marginRight="23dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/mIdTV"
                android:textColor="#ABABAB"
                android:textSize="10dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="94dp"
                android:layout_marginRight="23dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/mTelTV"
                android:textColor="#ABABAB"
                android:textSize="10dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mImgIV"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-2dp"
                android:background="@drawable/img_item_all_info" />

            <RelativeLayout
                android:layout_width="90dp"
                android:id="@+id/mChoosePropertiesRL"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-2dp">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25dp"
                    android:maxLength="20"
                    android:maxLines="5"
                    android:id="@+id/mLabelTV"
                    android:background="@drawable/textview_border"
                    android:textColor="#FFF"
                    android:textSize="14dp" />
                <android.support.v7.widget.AppCompatTextView
                    android:gravity="center"
                    android:id="@+id/mChoosePropertiesBtn"
                    android:layout_width="62dp"
                    android:layout_height="21dp"
                    android:layout_centerInParent="true"
                    android:background="#6299FF"
                    android:focusable="false"
                    android:visibility="gone"
                    android:text="选择属性"
                    android:textColor="#FFF"
                    android:textSize="12dp" />

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:id="@+id/mBtn"
                    android:background="#00000000"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mEditCheckBox"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_check_blue"
                android:visibility="gone" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
