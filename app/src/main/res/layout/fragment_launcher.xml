<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FE8800">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.lixiang.base.utils.view.SquareImageView
            android:id="@+id/mImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_launcher" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="“两违”整治综合监管系统"
            android:textColor="#FEF0DF"
            android:textSize="24dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="“两违”建筑标绘、数据录入/修改/删除、实时更新状态"
            android:textColor="#FEF0DF"
            android:textSize="14dp" />
        <RelativeLayout
            android:id="@+id/mOpenRL"
            android:layout_width="155dp"
            android:layout_height="43dp"
            android:background="@drawable/round_relativelayout_20px_fef0df"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mImg"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="160dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即开启"
                android:layout_centerInParent="true"
                android:textColor="#FE8800"
                android:textSize="18dp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/mOpenRL"/>
    </RelativeLayout>
</RelativeLayout>